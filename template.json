{
  "variables": {
    "build_timestamp": "{{timestamp}}"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_size": 40520,
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_os_type": "RedHat_64",
    "headless": "true",
    "http_directory": "http",
    "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
    "iso_checksum_type": "sha256",
    "iso_url": "https://archive.kernel.org/centos-vault/7.6.1810/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
    "output_directory": "output-virtualbox-iso-{{user `build_timestamp`}}",
    "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_timeout": "1h",
    "virtualbox_version_file": ".vbox_version",
    "vm_name": "packer-centos-7.6-{{user `build_timestamp`}}",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--hwvirtex", "on"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }, {
    "type": "vmware-iso",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_size": 40520,
    "guest_os_type": "centos-64",
    "headless": "true",
    "http_directory": "http",
    "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
    "iso_checksum_type": "sha256",
    "iso_url": "https://archive.kernel.org/centos-vault/7.6.1810/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
    "output_directory": "output-vmware-iso-{{user `build_timestamp`}}",
    "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_timeout": "1h",
    "tools_upload_flavor": "linux",
    "vm_name": "packer-centos-7.6-{{user `build_timestamp`}}",
    "vmdk_name": "packer-centos-7.6-{{user `build_timestamp`}}",
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  }],
  "provisioners": [{
    "type": "file",
    "source": "./files",
    "destination": "/tmp/files"
  }, {
    "type": "shell",
    "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
    "override": {
      "virtualbox-iso": {
        "scripts": [
          "scripts/base.sh",
          "scripts/vagrant.sh",
          "scripts/virtualbox.sh",
          "scripts/yum-installs.sh",
          "scripts/cleanup.sh"
        ]
      },
      "vmware-iso": {
        "scripts": [
          "scripts/base.sh",
          "scripts/vagrant.sh",
          "scripts/vmware.sh",
          "scripts/yum-installs.sh",
          "scripts/cleanup.sh"
        ]
      }
    }
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": true,
    "override": {
      "virtualbox": {
        "output": "packer-centos-7.6-virtualbox-{{user `build_timestamp`}}.box"
      },
      "vmware": {
        "output": "packer-centos-7.6-vmware-{{user `build_timestamp`}}.box"
      }
    }
  }]
}
